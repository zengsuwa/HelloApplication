<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.zsw.zeng.helloapplication"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".noslide.NoSlideActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".slide.SlideActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".status.StatusActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".status.SystemStatusActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".status.SecondStatusActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".status.ThirdStatusActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".mvp.MvpActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.ProgressActivity">
        </activity>
    </application>

</manifest>